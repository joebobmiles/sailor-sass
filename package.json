{
  "name": "@joebobmiles/sailor-sass",
  "version": "0.0.0",
  "description": "TailwindCSS implemented in Sass.",
  "main": "lib/_index.scss",
  "scripts": {
    "build": "sass -I lib/ ./lib/:./build/",
    "build:watch": "npm run build -- --watch",
    "test": "sass -I node_modules/ -I lib/ ./test/:./build/test/",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "atomic-css",
    "sass",
    "scss",
    "tailwind",
    "tailwind-css",
    "tailwindcss"
  ],
  "author": "Joseph R Miles <joe@jrm.dev> (https://jrm.dev)",
  "license": "MIT",
  "dependencies": {
    "sass": "^1.32.6"
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "sass-true": "^6.0.1",
    "semantic-release": "^17.3.7",
    "semantic-release-gitmoji": "^1.3.4",
    "stylelint": "^13.9.0",
    "stylelint-config-sass-guidelines": "^7.1.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "semantic-release-gitmoji",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
